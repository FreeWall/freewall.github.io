{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
        "es5",
        "es6",
        "dom",
        "es2015"
    ],
    "typeRoots": [
        "/node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "react",
      "react-dom"
    ]
  },
  "files": [
    "./declarations.d.ts"
  ],
  "exclude": ["**/*"]
}
